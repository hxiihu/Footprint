<li id="micropost-<%= micropost.id %> post">
<div class = "post">
  <%= link_to gravatar_for(micropost.user, size: 30, class: "postprofilepicture"), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to image_tag("x.png", class: "crossonpost"), micropost, method: :delete,
                                       data: { confirm: "You're to delete this footprint! Sure?" } %>
    <% end %>
  </span>
</div>
</li>