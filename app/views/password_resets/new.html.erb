<% provide(:title, "You Idiot") %>

<div class = "signuppage">
	<div class = "container">
		<h2 class = "signuptext">Forgot Password</h2>

		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= form_for(:password_reset, url: password_resets_path) do |f| %>
				<%= f.label :email, "Email used for signing up" %>
				<%= f.email_field :email, class: 'form-control' %>

				<%= f.submit "Submit", class: "btn btn-primary submittext" %>
				<% end %>
			</div>
		</div>
	</div>
</div>