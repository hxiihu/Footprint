<% provide(:title, 'All Users') %>
<div class = "signuppage">
 <div class = "container">
	<h2 class = "signuptext">All users</h2>

	<ul class="users">
  		<% @users.each do |u| %>
    	<li>
    	<%=  gravatar_for u, size: 50 %>    		
      	<%=  link_to u.name, u %>
    	</li>
  		<% end %>
	</ul>

 </div>
</div>